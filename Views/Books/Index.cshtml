@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "Book List";
}

<h1>Book List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Book</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Published Year</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Genre</td>
                <td>@book.PublishedYear</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = book.Id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", new { id = book.Id })" class="btn btn-danger">Delete</a>
                    <a href="@Url.Action("Details", new { id = book.Id })" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
